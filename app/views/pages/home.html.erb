<div class="feature-section text-center">
  <div>
    <p>Trusted by</p>
  </div>
  <div class=" d-flex justify-content-center align-items-center">
    <img src="https://res.cloudinary.com/dgxfmpty5/image/upload/v1692794225/development/Avion-express-logo_gdihbn.png" alt="">
    <img src="https://res.cloudinary.com/dgxfmpty5/image/upload/v1692794224/development/Klasjet_logo_eqbbuo.png" alt="">
    <img src="https://res.cloudinary.com/dgxfmpty5/image/upload/v1692794224/development/NetJets_logo.svg_fol1ma.png" alt="">
  </div>
</div>

<div class="container grid-home-jets my-5">
  <% @jets.shuffle.take(3).each do |jet| %>
        <div class="card border border-0 image-container" style="width: 20rem;">
          <div class="image-container">
              <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <a href= <%= jet_path(jet) %> >
                      <% photo = jet.photos.first %> <!-- Select the first photo from the collection -->
                      <%= cl_image_tag photo.key, crop: :fill %>
                    </a>
                  </div>
                  <% if jet.photos[1] %>
                    <div class="carousel-item">
                      <% target_index = 1 %> <!-- Replace this with the index of the desired photo -->
                      <a href= <%= jet_path(jet) %> >
                        <% photo = jet.photos[1] %>
                        <%= cl_image_tag photo.key, crop: :fill %>
                      </a>
                    </div>
                  <% end %>
                  <% if jet.photos[2] %>
                    <div class="carousel-item">
                      <% target_index = 2 %> <!-- Replace this with the index of the desired photo -->
                      <a href= <%= jet_path(jet) %> >
                        <% photo = jet.photos[2] %>
                        <%= cl_image_tag photo.key, crop: :fill %>
                      </a>
                    </div>
                  <% end %>
                  <% if jet.photos[3] %>
                    <div class="carousel-item">
                      <% target_index = 3 %> <!-- Replace this with the index of the desired photo -->
                      <a href= <%= jet_path(jet) %> >
                        <% photo = jet.photos[3] %>
                        <%= cl_image_tag photo.key, crop: :fill %>
                      </a>
                    </div>
                  <% end %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= jet.name %></h5>
            <p class="card-text"><strong>Model:</strong> <%= jet.model %></p>
            <p class="list-group-item" style="color: gray;"><strong>Location:</strong> <%= jet.location %></p>
            <p class="list-group-item" style="color: gray;"><strong>Type:</strong> <%= jet.jetType %></p>
            <p class="list-group-item mt-2"><strong>â‚¬ <%= jet.price %></strong> day</p>
          </div>
        </div>
  <% end %>
</div>
